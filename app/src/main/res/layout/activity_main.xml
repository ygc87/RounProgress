<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重新开始"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <org.zhx.rounprogress.RoundProgress
        android:id="@+id/roundProgress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android_custom:roundColor="#E7E7E7"
        android_custom:roundProgressColor="#3DA2FD"
        android_custom:roundWidth="2dp"
        android_custom:roundtextColor="#3DA2FD"
        android_custom:roundtextSize="16sp"
        android_custom:textIsDisplayable="true" />

</LinearLayout>